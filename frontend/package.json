{
  "name": "react-simple",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "test:ci": "react-scripts test --coverage --coverageReporters=lcov --watchAll=false",
    "build": "react-scripts build"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ]
  }
}
